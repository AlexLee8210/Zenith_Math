			 ios:Page.UseSafeArea="true">

	<StackLayout>

		<Grid HeightRequest="50"
				BackgroundColor="Transparent"
				Padding="10">

			<Grid.RowDefinitions>
				<RowDefinition Height="100*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
			</Grid.ColumnDefinitions>

			<Label x:Name="problemNumLabel"
				   Text="Problem: 1"
				   TextColor="Black"
				   FontSize="25"
				   Grid.Column="0"
				   Style="{StaticResource LabelColorBindingStyle}"/>

			<Label x:Name="timer"
				   Text="0:00"
				   TextColor="Black"
				   FontSize="25"
				   Grid.Column="1"
				   HorizontalTextAlignment="End"
				   Style="{StaticResource LabelColorBindingStyle}"/>
		</Grid>

		<Label x:Name="problemView"
			   Text=" = "
			   Padding="40, 50, 25, 25"
			   HorizontalOptions="Center"
			   VerticalOptions="Start"
			   FontSize="30"
			   Style="{StaticResource LabelColorBindingStyle}"/>

		<local:CustomEntry x:Name="problemEntry"
			   Margin="40, 20, 40, 20"
			   Keyboard="Numeric"
			   IsSpellCheckEnabled="False"
			   IsTextPredictionEnabled="False"
			   Text=""/>
		<!--TextChanged="ProblemTextChanged"-->
		<local:GradientButton Style="{StaticResource GradientButtonStyle}"
				Text="Next"
				Margin="100, 20, 100, 0"
				VerticalOptions="Center"
				Clicked="NextProblem"/>
